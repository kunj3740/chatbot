{
  "compilerOptions": {
    "jsx": "preserve", // Use "react-jsx" for React 17+ or "react" for older versions
    "lib": [
      "dom",
      "esnext"
    ], // Includes DOM types for HTML elements like <div>
    "types": [
      "react",
      "react-dom"
    ], // Ensures React types are included
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true, // Optional but recommended for stricter type checks
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
